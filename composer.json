{
  "name": "dimaskao/sorter",
  "description": "This library can sort array.",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Dmytro Lytvynchuk",
      "email": "dmytrolutv@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Dimaskao\\Sorter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dimaskao\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
    "tests": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
